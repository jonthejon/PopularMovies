<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jonathanoliveira.org.popularmovies.ui.views.MovieDetails_Activity" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_name_detail"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteHeight="38dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


        <ImageView
            android:id="@+id/poster_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="10dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="38dp"
            tools:layout_conversion_absoluteWidth="20dp"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/movie_overview_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:textSize="15sp"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="38dp"
            tools:layout_conversion_absoluteWidth="20dp"
            tools:layout_conversion_absoluteHeight="38dp"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="20dp" />


        <TextView
            android:id="@+id/movie_rating_detail"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="76dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteHeight="38dp"
            tools:layout_editor_absoluteY="76dp"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/movie_release_date_detail"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="15sp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="114dp"
            tools:layout_conversion_absoluteWidth="384dp"
            tools:layout_conversion_absoluteHeight="38dp"
            tools:layout_editor_absoluteY="114dp"
            tools:layout_editor_absoluteX="8dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
